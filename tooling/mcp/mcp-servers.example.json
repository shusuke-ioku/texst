{
  "mcpServers": {
    "zotero": {
      "command": "zotero-mcp",
      "args": ["serve"],
      "env": {
        "ZOTERO_STORAGE_PATH": "${HOME}/Zotero/storage",
        "ZOTERO_API_BASE": "http://127.0.0.1:23119/api/users/0"
      }
    },
    "pdf-reader": {
      "command": "pdf-reader-mcp",
      "args": ["serve"],
      "env": {
        "PDF_LIBRARY_DIR": "${HOME}/Documents/papers"
      }
    }
  }
}
